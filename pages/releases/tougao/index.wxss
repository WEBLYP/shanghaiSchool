.all .top .icon{
  width: 30rpx;
  margin-right: 20rpx
}

.all {
  height: 100vh;
  background: #f4f4f4;
  position: absolute;
  bottom: 0;
  top: 0;
  width: 100%;
  left: 0;
  box-sizing: border-box;
}

.all .top{
  font-size: 34rpx;
  display: flex;
  align-items: center;
  padding: 15rpx 20rpx 25rpx 20rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #e7e7e7;
}
.forms{
  font-size: 24rpx;
  color: #999
}

.forms input,picker{
  font-size: 30rpx;
  color: #999;
  padding: 25rpx 10rpx;
  background: #fff
}
.forms label{
  display: flex;
  align-items: center;
  padding: 20rpx
}
.forms .must{
  color: #ff0000;
  display: inline-block;
  vertical-align: middle
}

.forms picker{
  position: relative;
  background-image: url(data:image/png;base64,);
  background-repeat: no-repeat;
  background-position: 95% center;
  background-size: 20rpx
}

.confirm{
  padding:0 10px;
  background: #09bb07;
  color: #fff;
  font-size: 36rpx;
  width: 90%;
  display: block;
  margin: 20rpx auto;
}
.forms picker view{
  font-size: 30rpx
}

textarea{
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx;
  height: 200rpx;
  background: #fff
}