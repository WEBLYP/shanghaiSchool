/* pages/meeting/meetdetails/meetdetails.wxss */

.details {
  margin: 0 auto;
}

.details ul li {
  line-height: 60rpx;
  color: #999;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  white-space: normal
}

.details ul {
  display: block;
  overflow: hidden;
}
.details ul li text{
  display: inline-block;
  white-space: nowrap
}
.icon {
  max-height: 30rpx;
  max-width: 30rpx;
  display: block;
  margin-right: 15rpx;
}

.all {
  background: #f4f4f4;
  display: block;
  padding-bottom: 10rpx;
}

.meet_tt {
  padding: 18rpx 24rpx;
  background: #fff;
  font-size: 30rpx;
  color: #000;
  width: 100%;
  display: block;
}

ul {
  background: #fff;
  padding: 10rpx 20rpx;
  margin-top: 20rpx;
}

ul li:first-child {
  border-bottom: 1rpx solid #f4f4f4;
}

.share {
  padding: 0 10px;
  background: #09bb07;
  color: #fff;
  font-size: 36rpx;
  width: 90%;
  display: block;
  margin: 0 auto;
  margin-top: 20rpx;
}

textarea {
  width: 100%;
  height: auto;
  min-height: 150px;
  box-sizing: border-box;
}
