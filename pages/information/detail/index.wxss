/* pages/information/detail/index.wxss */

.bottom {
  position: fixed;
  width: 100%;
  bottom: 0;
  left: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 10rpx 0;
  border-top: 1rpx solid #e7e7e7;
  z-index: 999;
  background-color: #fff;
}

.bottom li {
  width: 33%;
  text-align: center;
  font-size: 35rpx;
  color: #61a4ff;
  height: inherit;
  overflow: hidden;
  position: relative;
  border: 0;
  outline: none
}

.bottom li image {
  max-width: 60rpx;
  max-height: 60rpx;
  display: block;
  margin: 0 auto;
  margin-bottom: 9rpx;
}

.all {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  overflow-y: auto;
  padding-bottom: 134rpx;
  box-sizing: border-box
}

button {
  width: 100%;
  position: relative;
  display: block;
  margin-left: auto;
  margin-right: auto;
  padding-left: inherit;
  padding-right: inherit;
  box-sizing: inherit;
  font-size: inherit;
  text-align: center;
  text-decoration: none;
  line-height: inherit;
  border-radius: inherit;
  -webkit-tap-highlight-color: transparent;
  overflow: inherit;
  color: inherit;
  background-color: inherit;
  border: 0;
  outline: transparent;
  border-color: #fff
}

.button-hover {
  border: 0;
  outline: none;
  color: inherit;
  background-color: transparent;
}

button::after{
  display: none;
}
.rich-text{
  width: 100%;
  overflow: hidden;
  overflow-y: auto;
}
image{
  width: 100%;
}
img{
  width: 100%
}